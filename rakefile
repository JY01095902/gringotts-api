require "rubygems"  
require "rake"  
require "rake/testtask"  
task :default => [:test] 
Rake::TestTask.new(:test) do |test|
  # libs表示要添加到$LOAD_PATH(就是加载ruby文件的搜索路径)的文件夹
  # 默认是"lib"，现在再添加"test"
  test.libs << "tests"
  # 要运行的测试文件的特征。匹配以test_开头的所有文件
  test.pattern = 'tests/**/test_*.rb' 
  #test.test_files = Dir[ "test/test_*.rb" ]  
  # 不输出测试文件的信息
  test.verbose = false
end